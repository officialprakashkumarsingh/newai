<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="4dp">

    <!-- Minimalistic Search Area with Indian Flag Animation -->
    <LinearLayout
        android:id="@+id/widget_search_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/indian_pride_animation"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp">
        
        <!-- Search Text -->
        <TextView
            android:id="@+id/widget_search_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Ask AhamAI anything..."
            android:textColor="@color/widget_text_color"
            android:textSize="16sp"
            android:gravity="center_vertical" />
            
    </LinearLayout>
    
            <!-- Voice Button -->
        <ImageButton
            android:id="@+id/widget_voice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_voice_minimal"
            android:scaleType="centerInside"
            android:contentDescription="Voice Input" />

</LinearLayout>