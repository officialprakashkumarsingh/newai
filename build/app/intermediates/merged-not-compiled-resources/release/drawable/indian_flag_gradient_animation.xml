<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <!-- Saffron to White Gradient -->
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF9933"
                android:centerColor="#FFFFFF"
                android:endColor="#FF9933"
                android:angle="0" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- White to Green Gradient -->
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#138808"
                android:endColor="#FFFFFF"
                android:angle="90" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Green to Saffron Gradient -->
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#138808"
                android:centerColor="#FF9933"
                android:endColor="#138808"
                android:angle="180" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Full Flag Gradient -->
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF9933"
                android:centerColor="#FFFFFF"
                android:endColor="#138808"
                android:angle="270" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Saffron Highlight -->
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="3dp"
                android:color="#FF9933" />
        </shape>
    </item>
    
    <!-- Green Highlight -->
    <item android:duration="5000">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="3dp"
                android:color="#138808" />
        </shape>
    </item>
    
</animation-list>