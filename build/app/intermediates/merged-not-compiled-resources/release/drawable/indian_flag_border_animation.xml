<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <!-- Saffron Phase -->
    <item android:duration="10000">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#FF9933" />
        </shape>
    </item>
    
    <!-- White Phase -->
    <item android:duration="10000">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Green Phase -->
    <item android:duration="10000">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#138808" />
        </shape>
    </item>
    
</animation-list>