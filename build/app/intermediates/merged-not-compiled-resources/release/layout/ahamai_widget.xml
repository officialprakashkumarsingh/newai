<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/google_widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with AhamAI Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ¤– AhamAI"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#202124"
            android:gravity="start" />
            
    </LinearLayout>

    <!-- Google-style Search Bar -->
    <LinearLayout
        android:id="@+id/widget_search_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/google_search_bar_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <!-- Search Text (replaces EditText) -->
        <TextView
            android:id="@+id/widget_search_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Ask AhamAI anything..."
            android:textColor="#5F6368"
            android:textSize="16sp"
            android:padding="0dp"
            android:gravity="center_vertical" />
            
        <!-- Action Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- Web Search Icon -->
            <ImageButton
                android:id="@+id/widget_web_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_icon_background"
                android:src="@drawable/ic_web_search"
                android:scaleType="centerInside"
                android:layout_marginEnd="4dp"
                android:contentDescription="Web Search" />
                
            <!-- File Attachment Icon -->
            <ImageButton
                android:id="@+id/widget_attachment"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_icon_background"
                android:src="@drawable/ic_attachment"
                android:scaleType="centerInside"
                android:layout_marginEnd="4dp"
                android:contentDescription="Attach File" />
                
            <!-- Voice Input Icon -->
            <ImageButton
                android:id="@+id/widget_voice"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_icon_background"
                android:src="@drawable/ic_mic"
                android:scaleType="centerInside"
                android:layout_marginEnd="4dp"
                android:contentDescription="Voice Input" />
                
            <!-- Send Button -->
            <ImageButton
                android:id="@+id/widget_send"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_send_background"
                android:src="@drawable/ic_send"
                android:scaleType="centerInside"
                android:contentDescription="Send" />
                
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>