<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <!-- Normal State (25 seconds) -->
    <item android:duration="25000">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_border" />
        </shape>
    </item>
    
    <!-- Saffron Glow (1.5 seconds) -->
    <item android:duration="1500">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/indian_saffron" />
        </shape>
    </item>
    
    <!-- White Glow (1.5 seconds) -->
    <item android:duration="1500">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/indian_white" />
        </shape>
    </item>
    
    <!-- Green Glow (1.5 seconds) -->
    <item android:duration="1500">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_search_background" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/indian_green" />
        </shape>
    </item>
    
    <!-- Pride Gradient (0.5 seconds) -->
    <item android:duration="500">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66FF9933"
                android:centerColor="#66FFFFFF"
                android:endColor="#66138808"
                android:angle="0" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
</animation-list>